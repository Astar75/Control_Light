<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.УправлениеСветом.ToolbarControl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_action_devices"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/toolbar_margin_edge"
            android:contentDescription="@string/devices"
            app:srcCompat="@drawable/ic_devices" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_action_saber_power"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/saber_power"
            app:srcCompat="@drawable/ic_saber_disconnect" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_action_battery"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/toolbar_margin_edge"
            android:contentDescription="@string/battery_level"
            app:srcCompat="@drawable/ic_battery" />
    </FrameLayout>

</LinearLayout>